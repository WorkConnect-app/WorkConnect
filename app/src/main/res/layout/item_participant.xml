<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground">

    <!-- Name -->
    <TextView
        android:id="@+id/tv_participant_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="John Doe"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:ellipsize="end"
        android:maxLines="1" />

    <!-- Video indicator -->
    <ImageView
        android:id="@+id/iv_video_indicator"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_camera_on"
        android:contentDescription="VidÃ©o" />

    <!-- Audio indicator -->
    <ImageView
        android:id="@+id/iv_audio_indicator"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_mic_on"
        android:contentDescription="Audio" />

    <!-- Speaking indicator -->
    <View
        android:id="@+id/view_speaking_indicator"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:background="@drawable/circle_button_background"
        android:backgroundTint="#4CAF50"
        android:visibility="gone" />

</LinearLayout>
