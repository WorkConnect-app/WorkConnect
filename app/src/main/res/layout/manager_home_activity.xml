<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.manager.ManagerHomeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Logout (top-right) -->
        <Button
            android:id="@+id/btn_manager_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textAllCaps="false"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/primaryBlue"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Greeting -->
        <TextView
            android:id="@+id/tv_hello_manager"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Hello, Manager"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_manager_logout" />

        <!-- Company name -->
        <TextView
            android:id="@+id/tv_company_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Company: My Company"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tv_hello_manager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- ===================== My area ===================== -->
        <TextView
            android:id="@+id/tv_my_area_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="My area"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/tv_company_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <GridLayout
            android:id="@+id/grid_my_area"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:useDefaultMargins="true"
            android:alignmentMode="alignMargins"
            android:layout_marginTop="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_my_area_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/btn_my_shifts"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:text="My shifts"
                android:textAllCaps="false"
                android:backgroundTint="@color/primaryBlue"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_my_vacations"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:text="My vacations"
                android:textAllCaps="false"
                android:backgroundTint="@color/primaryBlue"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_my_tasks"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:text="My tasks"
                android:textAllCaps="false"
                android:backgroundTint="@color/primaryBlue"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_personal_area"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:text="Personal area"
                android:textAllCaps="false"
                android:backgroundTint="@color/primaryBlue"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_chat"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:text="Chat"
                android:textAllCaps="false"
                android:backgroundTint="@color/primaryBlue"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_video_calls"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:text="Video calls"
                android:textAllCaps="false"
                android:backgroundTint="@color/primaryBlue"
                android:textColor="@color/white" />

            <!-- Full width -->
            <Button
                android:id="@+id/btn_employee_list"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_columnSpan="2"
                android:layout_gravity="fill_horizontal"
                android:text="All employees"
                android:textAllCaps="false"
                android:backgroundTint="@color/primaryBlue"
                android:textColor="@color/white" />

        </GridLayout>

        <!-- ===================== Management ===================== -->
        <TextView
            android:id="@+id/tv_management_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Management"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/grid_my_area"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <GridLayout
            android:id="@+id/grid_manager_actions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:useDefaultMargins="true"
            android:alignmentMode="alignMargins"
            android:layout_marginTop="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_management_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:id="@+id/btn_approve_users"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:text="Approve users"
                android:textAllCaps="false"
                android:backgroundTint="@color/primaryBlue"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_vacation_requests"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:text="Vacation requests"
                android:textAllCaps="false"
                android:backgroundTint="@color/primaryBlue"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_manage_shifts"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:text="Manage shifts"
                android:textAllCaps="false"
                android:backgroundTint="@color/primaryBlue"
                android:textColor="@color/white" />

            <!-- Manager adds salary slips for employees -->
            <Button
                android:id="@+id/btn_salary_slips"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:text="Salary slips"
                android:textAllCaps="false"
                android:backgroundTint="@color/primaryBlue"
                android:textColor="@color/white" />

            <!-- Full width -->
            <Button
                android:id="@+id/btn_company_settings"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_columnSpan="2"
                android:layout_gravity="fill_horizontal"
                android:text="Company settings"
                android:textAllCaps="false"
                android:backgroundTint="@color/primaryBlue"
                android:textColor="@color/white" />

        </GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
