<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">
    <!-- Back button (top-right) -->
    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textAllCaps="false"
        app:icon="@android:drawable/ic_media_previous"
        app:iconPadding="6dp"
        app:iconTint="@color/primaryBlue"
        android:backgroundTint="@android:color/transparent"
        android:textColor="@color/primaryBlue"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        android:id="@+id/btn_new_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New group"
        android:textAllCaps="false"
        app:icon="@android:drawable/ic_input_add"
        app:iconPadding="6dp"
        app:iconTint="@color/primaryBlue"
        android:backgroundTint="@android:color/transparent"
        android:textColor="@color/primaryBlue"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/et_search_employee"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:hint="Search employee..."
        android:imeOptions="actionSearch"
        android:inputType="textPersonName"
        android:background="@drawable/bg_search"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="#111111"
        android:textColorHint="#777777"
        app:layout_constraintTop_toBottomOf="@id/btn_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- Search results -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_search_results"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxHeight="220dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/et_search_employee"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- List of conversations -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_conversations"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/rv_search_results"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>

