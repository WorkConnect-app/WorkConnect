<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Remote video container (main view) -->
    <FrameLayout
        android:id="@+id/remote_video_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/controls_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Active Speaker View (main speaker + thumbnails) -->
        <LinearLayout
            android:id="@+id/active_speaker_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">
            
            <!-- Main speaker video -->
            <FrameLayout
                android:id="@+id/main_speaker_video_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#1A1A1A">
                
                <!-- Speaker name overlay -->
                <TextView
                    android:id="@+id/tv_speaker_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    android:layout_margin="16dp"
                    android:text=""
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:background="#80000000"
                    android:padding="8dp" />
            </FrameLayout>
            
            <!-- Thumbnails (horizontal scroll) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_thumbnails"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="#CC000000"
                android:clipToPadding="false" />
        </LinearLayout>

        <!-- RecyclerView for group calls (scrollable grid) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_remote_videos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:clipToPadding="false"
            android:visibility="gone" />

        <!-- Single video container for 1-1 calls -->
        <FrameLayout
            android:id="@+id/single_remote_video_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <!-- Avatar container (shown when video is off) -->
            <LinearLayout
                android:id="@+id/avatar_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#1A1A1A">

                <TextView
                    android:id="@+id/tv_remote_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="24sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>

    <!-- Local video container (small overlay) -->
    <FrameLayout
        android:id="@+id/local_video_container"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_margin="16dp"
        android:background="#1A1A1A"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        
        <!-- Avatar icon (shown when camera is off) -->
        <ImageView
            android:id="@+id/iv_local_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/ic_avatar"
            android:background="#1A1A1A"
            android:padding="24dp"
            android:visibility="gone" />
    </FrameLayout>

    <!-- Call status -->
    <LinearLayout
        android:id="@+id/status_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#80000000"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        
        <TextView
            android:id="@+id/tv_call_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call in progress..."
            android:textSize="16sp"
            android:textColor="@android:color/white" />
        
        <ImageView
            android:id="@+id/iv_network_quality"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_signal_4"
            android:contentDescription="Network quality" />
    </LinearLayout>

    <!-- Controls container (scrollable horizontally) -->
    <HorizontalScrollView
        android:id="@+id/controls_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#CC000000"
        android:scrollbars="none"
        android:fadingEdgeLength="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <!-- Mute button (Microphone) -->
            <ImageButton
                android:id="@+id/btn_mute"
                android:layout_width="@dimen/call_button_size"
                android:layout_height="@dimen/call_button_size"
                android:src="@drawable/ic_mic_on"
                android:background="@drawable/circle_button_background"
                android:backgroundTint="#FFFFFF"
                app:tint="#000000"
                android:layout_marginEnd="@dimen/call_button_margin"
                android:padding="@dimen/call_button_padding"
                android:contentDescription="Toggle microphone" />

            <!-- Camera button -->
            <ImageButton
                android:id="@+id/btn_camera"
                android:layout_width="@dimen/call_button_size"
                android:layout_height="@dimen/call_button_size"
                android:src="@drawable/ic_camera_on"
                android:background="@drawable/circle_button_background"
                android:backgroundTint="#FFFFFF"
                app:tint="#000000"
                android:layout_marginEnd="@dimen/call_button_margin"
                android:padding="@dimen/call_button_padding"
                android:contentDescription="Toggle camera" />

            <!-- Switch camera button (Front/Back) -->
            <ImageButton
                android:id="@+id/btn_switch_camera"
                android:layout_width="@dimen/call_button_size"
                android:layout_height="@dimen/call_button_size"
                android:src="@drawable/ic_switch_camera"
                android:background="@drawable/circle_button_background"
                android:backgroundTint="#FFFFFF"
                app:tint="#000000"
                android:layout_marginEnd="@dimen/call_button_margin"
                android:padding="@dimen/call_button_padding"
                android:contentDescription="Switch camera" />

            <!-- Speaker button -->
            <ImageButton
                android:id="@+id/btn_speaker"
                android:layout_width="@dimen/call_button_size"
                android:layout_height="@dimen/call_button_size"
                android:src="@drawable/ic_speaker_on"
                android:background="@drawable/circle_button_background"
                android:backgroundTint="#FFFFFF"
                app:tint="#000000"
                android:layout_marginEnd="@dimen/call_button_margin"
                android:padding="@dimen/call_button_padding"
                android:contentDescription="Toggle speaker" />

            <!-- Participants button -->
            <ImageButton
                android:id="@+id/btn_participants"
                android:layout_width="@dimen/call_button_size"
                android:layout_height="@dimen/call_button_size"
                android:src="@drawable/ic_group"
                android:background="@drawable/circle_button_background"
                android:backgroundTint="#FFFFFF"
                app:tint="#000000"
                android:layout_marginEnd="@dimen/call_button_margin"
                android:padding="@dimen/call_button_padding"
                android:contentDescription="View participants"
                android:visibility="gone" />

            <!-- Minimize button -->
            <ImageButton
                android:id="@+id/btn_minimize"
                android:layout_width="@dimen/call_button_size"
                android:layout_height="@dimen/call_button_size"
                android:src="@drawable/ic_minimize"
                android:background="@drawable/circle_button_background"
                android:backgroundTint="#FFFFFF"
                app:tint="#000000"
                android:layout_marginEnd="@dimen/call_button_margin"
                android:padding="@dimen/call_button_padding"
                android:contentDescription="Minimize call" />

            <!-- End call button -->
            <ImageButton
                android:id="@+id/btn_end_call"
                android:layout_width="@dimen/call_button_size"
                android:layout_height="@dimen/call_button_size"
                android:src="@drawable/ic_end_call"
                android:background="@drawable/circle_button_background"
                android:backgroundTint="#D32F2F"
                app:tint="#FFFFFF"
                android:padding="@dimen/call_button_padding"
                android:contentDescription="End call" />

        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
