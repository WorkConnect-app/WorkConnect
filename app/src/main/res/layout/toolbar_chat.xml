<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingStart="0dp"
    android:paddingEnd="8dp">

    <!-- Group infos (left) -->
    <Button
        android:id="@+id/btn_group_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Group"
        android:textAllCaps="false"
        app:icon="@android:drawable/ic_menu_info_details"
        app:iconPadding="6dp"
        app:iconTint="@color/primaryBlue"
        android:backgroundTint="@android:color/transparent"
        android:textColor="@color/primaryBlue" />

    <!-- Spacer -->
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />

    <!-- Call audio button -->
    <ImageButton
        android:id="@+id/btn_call_audio"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_call_audio"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_marginEnd="4dp"
        android:padding="6dp"
        android:scaleType="fitCenter"
        android:contentDescription="Audio call" />

    <!-- Call video button -->
    <ImageButton
        android:id="@+id/btn_call_video"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_call_video"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_marginEnd="4dp"
        android:padding="6dp"
        android:scaleType="fitCenter"
        android:contentDescription="Video call" />

    <!-- Back button (right) -->
    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textAllCaps="false"
        app:icon="@android:drawable/ic_media_previous"
        app:iconPadding="6dp"
        app:iconTint="@color/primaryBlue"
        android:backgroundTint="@android:color/transparent"
        android:textColor="@color/primaryBlue"
        android:layout_marginEnd="48dp" />

</LinearLayout>
